<h1>Product Lines</h1>

<table id="example" class="table table-striped table-bordered" style="width:100%" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="">opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @product_lines.each do |product_line| %>
      <tr>
        <td><%= product_line.name %></td>
        <td><%= product_line.description %></td>
        <td><%= link_to 'Ver', product_line %>
        <%= link_to 'Editar', edit_product_line_path(product_line) %>
        <%= link_to 'Eliminar', product_line, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

