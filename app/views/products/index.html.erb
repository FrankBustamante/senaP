<p id="notice"><%= notice %></p>
<%= link_to "<- Sucursal #{BranchOffice.find(params[:branch_office_id]).name}", branch_office_path(params[:branch_office_id]) %>
<h1>Products</h1>

<table id="example" class="table table-striped table-bordered" style="width:100%" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Linea de Producto</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Adjunto</th>
      <th>opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.product_line.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= product.adjunto %></td>
        <td><%= link_to 'Ver', branch_office_product_path(product, branch_office_id: params[:branch_office_id]) %>
        <%= link_to 'Editar', edit_branch_office_product_path(product, branch_office_id: params[:branch_office_id]) %>
        <%= link_to 'Eliminar', branch_office_product_path(product, branch_office_id: params[:branch_office_id]), method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_branch_office_product_path %>
