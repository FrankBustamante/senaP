<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table id="example" class="table table-striped table-bordered" style="width:100%" >
  <thead>
    <tr>
      <th>Client</th>
      <th>User</th>
      <th>Invoice code</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.client %></td>
        <td><%= sale.user %></td>
        <td><%= sale.invoice_code %></td>
        <td><%= link_to 'Show', sale %>
        <%= link_to 'Edit', edit_sale_path(sale) %>
        <%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

