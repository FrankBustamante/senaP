<!DOCTYPE html>
<html>
  <head>
    <title>SenaParmalat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'Linea de Productos', product_lines_path, class: 'nav-link' %>          
        </li>
        <li class="nav-item">
          <%= link_to 'Sucursales', branch_offices_path, class: 'nav-link' %>          
        </li>
        <li class="nav-item">
          <%= link_to 'Reportes', reports_path, class: 'nav-link' %>          
        </li>
        <li class="nav-item">
          <%= link_to 'Clientes', clients_path, class: 'nav-link' %>          
        </li>
        <li class="nav-item">
          <%= link_to 'Ventas', sales_path, class: 'nav-link' %>          
        </li>
        <li class="nav-item">
          <%= link_to 'Gerentes', managers_path, class: 'nav-link' %>          
        </li>
        <!-- <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li> -->
      </ul>
        <% if signed_in? %>
            <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete, class: 'nav-link ' %>
        <% else %>
            <%= link_to "Registrarse", new_user_registration_path, class: 'nav-link' %>
            <%= link_to "Ingresar", new_user_session_path, class: 'nav-link' %>
        <% end %>
    </div>
  </nav>
    <div style="margin:15px;">
      <%= yield %>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
      $(document).ready(function () {
      $('#example').dataTable({
      "scrollY": "200px",
      "scrollCollapse": true,
      "paging": false
      });
      });
    </script>
  </body>
</html>
